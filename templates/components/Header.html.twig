<header style="text-align: center; background-color: #333; padding: 10px;">
  <ul style="list-style-type: none; padding: 0; display: flex; justify-content: center;">
    {% for subject in subjects %}
      <li style="margin-right: 20px;">
        <a href="{{ path('app_posts_by_subject', {'id': subject.id}) }}" style="text-decoration: none; color: #fff; font-weight: bold;">{{ subject.name }}</a>
      </li>
    {% endfor %}
  </ul>
</header>
