{% extends 'base.html.twig' %}

{% block title %}Créer un Nouveau Sujet{% endblock %}

{% block body %}

<head>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
</head>

<style>
  body {
    background-color: #f8f9fa;
    font-family: Arial, sans-serif;
  }

  h1 {
    margin-top: 20px;
    font-size: 24px;
    color: #343a40;
  }

  button[type="submit"] {
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
  }

  button[type="submit"]:hover {
    background-color: #0056b3;
  }

  .form-group {
    margin-bottom: 20px;
  }

  label {
    font-weight: bold;
    color: #343a40;
  }

  input[type="text"],
  textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ced4da;
    border-radius: 5px;
  }

  .form-error {
    color: #dc3545;
    margin-top: 5px;
    font-size: 14px;
  }
</style>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="{{ path('app_subject') }}">Accueil</a>
  <button
    class="navbar-toggler"
    type="button"
    data-toggle="collapse"
    data-target="#navbarNav"
    aria-controls="navbarNav"
    aria-expanded="false"
    aria-label="Toggle navigation"
  >
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <a class="nav-link" href="{{ path('app_login') }}">Login</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('app_register') }}">Register</a>
      </li>
    </ul>
  </div>
</nav>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h1>Créer un Nouveau Sujet</h1>

          {{ form_start(form) }}
          <div class="form-group">
            <label for="name">Nom du Sujet</label>
            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom du sujet'}}) }}
            {% if form_errors(form.name) %}
            <div class="form-error">{{ form_errors(form.name)|first }}</div>
            {% endif %}
          </div>

          <div class="form-group">
            <label for="description">Description</label>
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description du sujet'}}) }}
            {% if form_errors(form.description) %}
            <div class="form-error">{{ form_errors(form.description)|first }}</div>
            {% endif %}
          </div>

          <button type="submit">Créer Sujet</button>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</div>

<a href="{{ path('app_basket_main') }}" class="btn btn-secondary mt-3">Retour</a>

{% endblock %}
