{# templates/post/show.html.twig #} 
{% extends 'base.html.twig' %} 
{% block title %}Détails du post{% endblock %} 
{% block body %}

{% include 'components/Head.html.twig' %} 
{% include 'components/Navbar.html.twig' %} 
{% include 'components/Header.html.twig' with {'subjects': subjects} %}

<div class="container">
  <h1>Détails du post</h1>
  <ul>
    <li><strong>ID :</strong> {{ post.id }}</li>
    <li><strong>Titre :</strong> {{ post.name }}</li>
    <li><strong>Contenu :</strong> {{ post.content }}</li>
    <li><strong>Créé le :</strong> {{ post.createdAt|date('d/m/Y H:i:s') }}</li>
    <li><strong>Modifié le :</strong> {{ post.updatedAt|date('d/m/Y H:i:s') }}</li>
  </ul>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

{% endblock %}
