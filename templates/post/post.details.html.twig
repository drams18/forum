{# templates/post/show.html.twig #} 
{% extends 'base.html.twig' %} 
{% block title %}Détails du post{% endblock %} 
{% block body %}

<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
</head>

<style>
  .container {
    margin-top: 50px;
  }

  .container h1 {
    text-align: center;
    margin-bottom: 30px;
  }

  ul {
    list-style-type: none;
    padding: 0;
  }

  li {
    margin-bottom: 10px;
  }

  a {
    color: #ffffff;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }
</style>

{{ component('Navbar') }}

<div class="container">
  <h1>Détails du post</h1>
  <ul>
    <li><strong>ID :</strong> {{ post.id }}</li>
    <li><strong>Titre :</strong> {{ post.name }}</li>
    <li><strong>Contenu :</strong> {{ post.content }}</li>
    <li><strong>Créé le :</strong> {{ post.createdAt|date('d/m/Y H:i:s') }}</li>
    <li><strong>Modifié le :</strong> {{ post.updatedAt|date('d/m/Y H:i:s') }}</li>
  </ul>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

{% endblock %}
