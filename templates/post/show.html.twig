{% extends 'base.html.twig' %} 
{% block title %}Détails du post{% endblock %} 
{% block body %}

{% include 'components/Head.html.twig' %} 
{% include 'components/Navbar.html.twig' %} 
{% include 'components/Header.html.twig' with {'subjects': subjects} %}

<div class="container">
  <h2 class="mb-4">Liste des posts existants</h2>
  <div class="d-flex justify-content-end mb-4">
      <a href="{{ path('app_post_create') }}" class="btn btn-secondary">Créer un Post</a>
  </div>
  <div class="table-responsive">
      <table class="table table-striped">
          <thead>
              <tr>
                  <th scope="col">#</th>
                  <th scope="col">Nom du Post</th>
                  <th scope="col">Contenu</th>
                  <th scope="col">Action</th>
              </tr>
          </thead>
          <tbody>
              {% for post in posts %}
                  <tr>
                      <th scope="row">{{ post.id }}</th>
                      <td>{{ post.name }}</td>
                      <td>{{ post.content }}</td>
                      <td>
                          <div class="d-flex justify-content-center">
                              <form method="get" action="{{ path('app_post_details', { id: post.id }) }}">
                                  <button type="submit" class="btn btn-primary me-2">Détails</button>
                              </form>
                          </div>
                      </td>
                  </tr>
              {% endfor %}
          </tbody>
      </table>
  </div>
</div>



<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

{% endblock %}
