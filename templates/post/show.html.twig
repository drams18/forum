{% extends 'base.html.twig' %} 
{% block title %}Détails du post{% endblock %} 
{% block body %}

{% include 'components/Head.html.twig' %} 
{% include 'components/Navbar.html.twig' %} 
{% include 'components/Header.html.twig' with {'subjects': subjects} %}

<div class="container">
  <h2>Liste des sujets existants</h2>
  <a href="{{ path('app_post_create') }}" class="btn btn-secondary">Créer un Post</a>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nom du Post</th>
        <th scope="col">Contenu</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      {% for post in posts %}
      <tr>
        <th scope="row">{{ post.id }}</th>
        <td>{{ post.name }}</td>
        <td>{{ post.content }}</td>
        <td>
          <div class="d-flex">
            <form method="get" action="{{ path('app_post_details', { id: post.id }) }}">
              <button type="submit" class="btn btn-primary">Détails</button>
            </form>
            <form method="post" action="{{ path('app_post_delete', { id: post.id }) }}">
              <input type="hidden" name="post_id" value="{{ post.id }}">
              <button type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce post ?')" class="btn btn-danger">Supprimer</button>
            </form>
            <form method="get" action="{{ path('app_post_edit', { id: post.id }) }}">
              <button type="submit" class="btn btn-primary">Modifier</button>
            </form>
          </div>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

{% endblock %}
