    <div class="card" style="width: 18rem; margin-right: 10px;">
      <div class="card-body">
        <h5 class="card-title">{{ post.name }}</h5>
        <p class="card-text">{{ post.content }}</p>
      </div>
    </div>
  </a>
  {% endfor %}
</div>


