{% extends 'base.html.twig' %}

{% block title %}Themes{% endblock %}

{% block body %}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"/>
</head>

<style>

    .container {
        margin-top: 50px;
    }
    
    .form-group {
        margin-bottom: 20px;
    }
    
    .navbar {
        margin-bottom: 20px;
    }
    
    .card {
        margin-bottom: 20px;
    }
    
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
    
    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
    
    .btn-primary:focus, .btn-primary.focus {
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.5);
    }
    
    .btn-primary.disabled, .btn-primary:disabled {
        background-color: #007bff;
        border-color: #007bff;
    }
    
    .btn-primary:not(:disabled):not(.disabled):active, .btn-primary:not(:disabled):not(.disabled).active,
    .show > .btn-primary.dropdown-toggle {
        background-color: #0056b3;
        border-color: #0056b3;
    }

</style>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="{{ path('app_home') }}">Accueil</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
            </li>
        </ul>
    </div>
</nav>

<div class="container">
    <h3>Thèmes :</h3>
    <ul>
        {% for theme in themes %}
            <li>{{ theme.name }}</li>
        {% endfor %}
    </ul>

    <h4>Créer un nouveau thème :</h4>
    <form action="{{ path('app_theme_create') }}" method="post">
        {{ form_errors(themeForm) }}

        <div class="form-group">
            <label for="theme_name">Nom du thème :</label>
            {{ form_widget(themeForm.name, {'attr': {'class': 'form-control', 'id': 'theme_name'}}) }}

            <label for="theme_name">Description :</label>
            {{ form_widget(themeForm.description, {'attr': {'class': 'form-control', 'id': 'theme_description'}}) }}
        </div>

        <button type="submit" class="btn btn-primary">Créer</button>
    </form>
</div>

{% endblock %}
