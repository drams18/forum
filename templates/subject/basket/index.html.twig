{% extends 'base.html.twig' %} 
{% block title %}Basket-ball{% endblock %} 
{% block body %}
<style>
  .example-wrapper {
    margin: 1em auto;
    max-width: 800px;
    width: 95%;
    font: 18px/1.5 sans-serif;
  }
  .example-wrapper code {
    background: #f5f5f5;
    padding: 2px 6px;
  }
</style>

<div class="example-wrapper">
  <br />
  <br />
  <h2 class="main_title">Basket-ball</h2>
  <br />
  <h3 class="txt">Voici les sujets intéressants :</h3>
  <br />
  <ul>
    <li>
      <a href="{{ path('app_basket_story') }}">L'histoire de la création de la NBA.</a>
    </li>
  </ul>
  <h4>Sujets créés par les utilisateurs :</h4>
  <ul>
    {% for basket in baskets %}
    <li>
      <a href="{{ path('app_basket_subject', { id: basket.id }) }}">{{
        basket.name
      }}</a>
    </li>
    {% endfor %}
  </ul>
  <a href="{{ path('app_my_subject') }}"><button>Mes Sujets</button></a>
  <a href="{{ path('subject_new_basket') }}"><button>Créer un sujet</button></a>
</div>
<br />
<a href="{{ path('app_home') }}">Home</a>
{% endblock %}
