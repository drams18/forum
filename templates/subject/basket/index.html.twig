{% extends 'base.html.twig' %}

{% block title %}Basket-ball{% endblock %} 
{% block body %}
<head>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
</head>
<style>
  .example-wrapper {
    margin: 1em auto;
    max-width: 800px;
    width: 95%;
    font-family: 'Arial', sans-serif;
  }

  .main_title {
    font-size: 28px;
    color: #333;
    margin-bottom: 20px;
  }

  .txt {
    font-size: 20px;
    color: #555;
    margin-bottom: 10px;
  }

  ul {
    list-style-type: none;
    padding-left: 0;
  }

  ul li {
    margin-bottom: 10px;
  }

  a {
    text-decoration: none;
    color: #007bff;
  }

  a:hover {
    text-decoration: underline;
  }

  button {
    padding: 10px 20px;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
  }

  button:hover {
    background-color: #0056b3;
  }

  a.btn {
    text-decoration: none;
    color: #fff;
  }

  a.btn:hover {
    text-decoration: none;
    color: #fff;
  }
</style>

<nav class="navbar navbar-expand-md navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="{{ path('app_subject') }}">Accueil</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        {% if app.user %}
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
          </li>
        {% else %}
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_login') }}">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_register') }}">Register</a>
          </li>
        {% endif %}
      </ul>
    </div>
  </div>
</nav>

<div class="example-wrapper">
  <br />
  <br />
  <br />
  <h2 class="main_title">Basket-ball</h2>
  <br />
  <h3 class="txt">Voici les sujets intéressants :</h3>
  <br />
  <ul>
    <li>
      <a href="{{ path('app_basket_story') }}"
        >L'histoire de la création de la NBA.</a
      >
    </li>
  </ul>
  <h4>Sujets créés par les utilisateurs :</h4>
  <ul>
    {% for basket in baskets %}
    <li>
      <a href="{{ path('app_basket_subject', { id: basket.id }) }}">{{
        basket.name
      }}</a>
    </li>
    {% endfor %}
  </ul>
  <a href="{{ path('app_my_subject') }}"><button>Mes Sujets</button></a>
  <a href="{{ path('subject_new_basket') }}"><button>Créer un sujet</button></a>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

{% endblock %}
